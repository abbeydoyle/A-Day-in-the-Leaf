{{!-- add plant button --}}
{{!-- redirect to add plant page --}}
<div class="grid grid-cols-10 mt-10 font-serif">
      <button id="plant-add" class="relative inline-flex items-center justify-center p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-[#2c2e28] rounded-lg group bg-gradient-to-br from-[#2c2e28] to-[#284c20] group-hover:from-[#2c2e28] group-hover:to-[#284c20] hover:text-[#C4CEB4] focus:ring-4 focus:outline-none focus:ring-[#284c20] col-start-9">
            <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-[#C4CEB4] rounded-md group-hover:bg-opacity-0">
                  <i class="fa-solid fa-plus"></i> Add plant
            </span>
      </button>
</div>

{{!-- dashboard --}}
<div class="bg-inherit antialiased">
      {{!-- sticky sidebar with plant databases --}}
      <div class="flex flex-col fixed top-[400px]">
            <a href="https://plants.usda.gov/home" class="text-3xl" target="_blank"><i class="fa-solid fa-seedling" title="USDA Plant Database"></i></a> 
            <a href="https://garden.org/plants/" class="text-3xl mb-2" target="_blank"><i class="fa-solid fa-leaf" title="Garden Plant Database"></i></a>
            <a href="https://www.rhs.org.uk/plants" class="text-3xl mb-2" target="_blank"><i class="fa-solid fa-plant-wilt" title="RHS Plant Identifier"></i></a> 
      </div>

      {{!-- dashboard plant loop --}}
      <div class="bg-inherit md:max-2xl:col-span-6 pl-20 ml-5 flex-wrap">
            <div class="antialiased bg-inherit text-gray-900 font-serif p-6">
                  <div class="container mx-auto">
                        <div id="plants-container" class="flex flex-wrap -mx-4 cardcontainer">

                              {{#each plant as |plant|}}
                              <div class="wrapper bg-transparent antialiased text-gray-900 w-full sm:w-1/2 md:w-1/2 xl:w-1/4 m-10">
                                    <div>
                                          {{!-- image populated from specified plant type via image folder --}}
                                          <img src="/{{plant.plantType}}.png" alt="plant image" class="w-full object-cover object-center rounded-lg" id="planticon">
                                          <div id={{plant.id}} class="relative px-4 -mt-16">
                                                <div id={{plant.id}} class="bg-white p-6 rounded-lg shadow-lg">
                                                      <div id={{plant.id}} class="flex justify-between">
                                                            <div id={{plant.id}} class="flex items-baseline">
                                                                  <span id={{plant.id}} class="plantSpan text-[#eae3ba] bg-[#2c2e28] text-xs px-2 inline-block rounded-full  uppercase font-semibold tracking-wide">
                                                                        {{plant.plantType}}
                                                                  </span>
                                                            </div>
                                                            <div>
                                                                  <button id = "water-button"><i id = "water-button" class="fa-solid fa-droplet"></i></button>
                                                                  <button class="pl-5"><i id = "delete-button" class="fa-solid fa-trash"></i></button>
                                                            </div>
                                                      </div>
                                                      <h4 id={{plant.id}} class="mt-1 text-xl font-semibold uppercase leading-tight truncate">
                                                            {{plant.name}}
                                                      </h4>
                                                      <div id={{plant.id}} class="mt-1">
                                                            Watered: 
                                                            <span id={{plant.id}} class="text-gray-600 text-sm">
                                                                  {{plant.watered}}
                                                            </span>
                                                      </div>
                                                      <div id={{plant.id}} class="mt-1">
                                                            Health conerns:
                                                            <span id={{plant.id}} class="text-gray-600 text-sm">
                                                                  {{plant.generalNotes}}
                                                            </span>
                                                      </div>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                        {{/each}}
                        </div>
                  </div>
            </div>
      </div>
</div>

{{!-- link to public js --}}
<script src="/javascript/logout.js"></script>